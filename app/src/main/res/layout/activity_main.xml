<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.myappportfolio.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-light"
        android:paddingTop="15dp"
        android:text="My Android Applications"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <!-- Spotify Buttin -->
    <Button
        android:id="@+id/spotifyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="58dp"
        android:background="@drawable/button_boarder"
        android:onClick="spotifyButton"
        android:text="Spotify Streamer"
        android:textColor="#F44336" />

    <!-- Football Score Button -->
    <Button
        android:id="@+id/scoresButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spotifyButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_boarder"
        android:onClick="footballScores"
        android:text="Football Scores"
        android:textColor="#F44336" />

    <!-- Library App Button -->
    <Button
        android:id="@+id/libraryApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/scoresButton"
        android:layout_centerVertical="true"
        android:background="@drawable/button_boarder"
        android:onClick="libraryButton"
        android:layout_marginTop="20dp"
        android:text="Library App"
        android:textColor="#F44336" />

    <!-- Build it Bigger Button -->
    <Button
        android:id="@+id/buildBiggerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/libraryApp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_boarder"
        android:onClick="buildBiggerButton"
        android:text="Build It Bigger"
        android:textColor="#F44336" />

    <!-- XYZ Reader Button -->
    <Button
        android:id="@+id/readerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buildBiggerButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_boarder"
        android:onClick="xyzButton"
        android:text="XYZ Reader"
        android:textColor="#F44336" />

    <!-- Capstone Button -->
    <Button
        android:id="@+id/capstoneButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#F44336"
        android:onClick="capstoneButton"
        android:text="Capstone"
        android:textColor="#ffffff"
        android:layout_below="@+id/readerButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
